{
  "name": "lavoretto",
  "version": "1.0.0-canary.2",
  "description": "A tiny tool useful when working with Google Cloud Platform Workflows",
  "author": {
    "name": "Giacomo Debidda",
    "email": "giacomo@giacomodebidda.com",
    "url": "https://giacomodebidda.com/"
  },
  "license": "MIT",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "cli",
    "cloud",
    "gcp",
    "google-cloud-platform",
    "workflows"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jackdbd/lavoretto"
  },
  "bugs": {
    "url": "https://github.com/jackdbd/lavoretto/issues?q=is%3Aissue+label%3Abug"
  },
  "homepage": "https://github.com/jackdbd/lavoretto",
  "engines": {
    "node": ">=16.0.0"
  },
  "main": "lavoretto",
  "type": "module",
  "files": [
    "CHANGELOG.md",
    "bin",
    "lib"
  ],
  "bin": {
    "lavoretto": "./bin/cli.js"
  },
  "scripts": {
    "clean": "rm -rf coverage dist",
    "coverage-report": "python3 -m http.server --directory ./coverage/lcov-report 8090",
    "format": "prettier --config .prettier.cjs --write {bin,lib,test}/**/*.{cjs,js,mjs,ts}",
    "help": "npx lavoretto --help",
    "ncu:dev": "ncu --doctor --dep 'dev' --upgrade",
    "nuke": "rm -rf package-lock.json node_modules dist",
    "release:dry-run": "semantic-release --no-ci --dry-run",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "ls lib/*.js | NODE_OPTIONS=--experimental-vm-modules entr -r jest"
  },
  "dependencies": {
    "ansi-colors": "^4.1.3",
    "debug": "^4.3.4",
    "js-yaml": "^4.1.0",
    "yargs": "^17.6.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@semantic-release/changelog": "^6.0.2",
    "@semantic-release/git": "^10.0.1",
    "jest": "^29.3.1",
    "npm-check-updates": "^16.6.2",
    "prettier": "^2.8.1",
    "semantic-release": "^19.0.5"
  }
}
